link(rel="stylesheet", href="/css/questions.css")


div(class="questionForm")
    div(class="questitle")
        h1 All Questions | ?? Question
    div(class="kebab")
        p Questions &nbsp
        p Date &nbsp&nbsp
        p Resolved at
        img(src="/assets/image/caret-icon.png")

    div(class="quesList")
        for question in questionID
            div(class="question")
                h1(id="title") #{question.title}
                p(id="poster") Poster par #{question.poster}
                div(class="descdesc") #{question.createdAt}
                p(id="resolv") Date
                form(type="post", action="/questionPage/" + question.id)
                    button(type="submit", class="btnV") Visit
            div(class="line")
    div(class="quesList")
        for question in questionNoID
            div(class="question")
                h1(id="title") #{question.title}
                p(id="poster") Poster par #{question.poster}
                div(class="descdesc") #{question.createdAt}
                p(id="resolv") Date
                form(type="post", action="/questionPage/" + question.id)
                    button(type="submit", class="btnV") Visit
            div(class="line")







